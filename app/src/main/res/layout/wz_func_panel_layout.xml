<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/wz_bg"
        tools:ignore="ImageContrastCheck"></pl.droidsonroids.gif.GifImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:layoutAnimation="@anim/wz_func_panel_layout_anim"
        ><!--android:layoutAnimation="@anim/wz_func_panel_layout_anim"-->

        <ImageView
            android:id="@+id/call"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/wz_junzhiming"
            android:translationX="20dp"
            android:translationY="0dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/prop"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:scaleType="centerCrop"
            android:src="@drawable/wz_wuzhiwu"
            android:translationX="30dp"
            android:translationY="50dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/voice"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/wz_tingwuyan"
            android:translationX="20dp"
            android:translationY="100dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/close_func_panel"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/wz_gaoci"
            android:translationX="-50dp"
            android:translationY="150dp"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

</RelativeLayout>