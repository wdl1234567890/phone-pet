<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ax_bg"
        tools:ignore="ImageContrastCheck"></pl.droidsonroids.gif.GifImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:layoutAnimation="@anim/ax_func_panel_layout_anim"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/call"
            android:layout_width="70dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:translationX="50dp"
            android:translationY="450dp"
            android:src="@drawable/ax_junzhiming"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/prop"
            android:layout_width="70dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:translationX="100dp"
            android:translationY="450dp"
            android:src="@drawable/ax_wuzhiwu"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/voice"
            android:layout_width="70dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:translationX="150dp"
            android:translationY="450dp"
            android:src="@drawable/ax_tingwuyan"
            tools:ignore="SpeakableTextPresentCheck" />


    </LinearLayout>

    <ImageView
        android:id="@+id/close_func_panel"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:translationX="100dp"
        android:translationY="300dp"
        android:src="@drawable/ax_gaoci"
        tools:ignore="SpeakableTextPresentCheck" />

</RelativeLayout>